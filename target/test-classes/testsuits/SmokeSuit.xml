	</listeners>
	<test name="Smoke Tests">
		<groups>
			<run>
				<include name="smoke" />
			</run>
		</groups>
		<classes>
			<class name="ncpr.HomePageValidations" />
			<class name="ncpr.CaseOperations" />
			<class name="ncpr.CaseDetailViewValidations" />
			<class name="ncpr.ComponentVerificationTest" />

			<!-- Add more test classes as needed -->
		</classes>
	</test>
</suite>
